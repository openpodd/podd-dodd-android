<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical"
    tools:context="org.cm.podd.urban.report.fragment.ReportFeedFragment">

    <!--<include layout="@layout/cell_report_item" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/top_content"
            android:background="@drawable/bg_shadow_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/report_buttonview"
                style="@style/CustomBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_report_radius"
                android:minHeight="0dp"
                android:paddingBottom="5dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="5dp"
                android:text="รายงาน"
                android:textColor="@color/textWhite"
                android:textSize="22dp" />
        </LinearLayout>

        <FrameLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/top_content">
            <include layout="@layout/content_list_view" />
        </FrameLayout>

    </RelativeLayout>


</LinearLayout>
