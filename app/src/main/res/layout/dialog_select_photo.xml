<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/rounded_white_bg"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/text_choose_photo"
        android:layout_marginBottom="20dp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:id="@+id/dialog_choose_image_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="20dp">
            <ImageView
                android:id="@+id/btn_dialog_take_a_photo"
                android:src="@mipmap/dialog_btn_camera_popup"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent" />
            <TextView
                android:id="@+id/label_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_take_a_picture"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="#333333"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/btn_dialog_choose_photo"
                android:src="@mipmap/dialog_btn_photo_popup" />
            <TextView
                android:id="@+id/label_gallery"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_gallery"
                android:gravity="center"
                android:singleLine="true"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="@+id/btn_dialog_choose_photo"
                android:textColor="#333333"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
